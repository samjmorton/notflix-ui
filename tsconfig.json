{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
		"paths": {
			"@src/*": ["./src/*"],
			"@data/*": ["./data/*"],
			"@pages/*": ["./pages/*"],
			"@components/*": ["./components/*"],
			"@components": ["./components/index.ts"],
			"@utilities/*": ["./utilities/*"],
			"@styles/*": ["./styles/*"],
		},
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules"
  ],
}
